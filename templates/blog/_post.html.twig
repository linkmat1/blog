
<article class="blog-post">
    <div class="blog-post__body">
        <h2 class="blog-post__title"><a href="{{ path('blog_show', {slug: post.slug, id: post.id})}}">{{ post.title }}</a></h2>
        <div class="blog-post__meta">
            <div>{{ post.createdAt | ago }} | Dans la categorie <a href="#">{{ post.category.title }}</a> </div>
            <div>Auteur <a href="#">{{ post.author.username }}</a></div>
        </div>
        <p>
            {{ post.content | markdown_excerpt(250) }}
        </p>
    </div>
</article>